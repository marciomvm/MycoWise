<header class="header">
  <div class="container">
    <nav class="nav">
      <a href="/" class="logo">
        <img src="/images/logo.svg" alt="MycoWise Logo" />
        <span>MycoWise</span>
      </a>
      
      <div class="nav-links">
        <a href="/shop" class="nav-link">Shop</a>
        <a href="/blog" class="nav-link">Blog</a>
        <a href="/recipes" class="nav-link">Recipes</a>
        <a href="/learn" class="nav-link">Learn</a>
        <a href="https://growkitmushroom.co.uk/product/lions-mane-mushroom-growing-kit/" class="nav-link cta">Buy Now</a>
      </div>

      <button class="mobile-menu-btn" aria-label="Toggle Menu">
        <span></span>
        <span></span>
        <span></span>
      </button>
    </nav>
  </div>
</header>

<style>
  .header {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    box-shadow: 0 2px 10px rgba(46, 77, 52, 0.1);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem 2rem;
  }

  .nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--primary);
  }

  .logo img {
    height: 2rem;
  }

  .nav-links {
    display: flex;
    gap: 2rem;
    align-items: center;
  }

  .nav-link {
    text-decoration: none;
    color: var(--text-primary);
    font-weight: 500;
    transition: color 0.3s ease;
  }

  .nav-link:hover {
    color: var(--highlight);
  }

  .nav-link.cta {
    background: var(--primary);
    color: white;
    padding: 0.5rem 1.5rem;
    border-radius: 2rem;
    transition: all 0.3s ease;
  }

  .nav-link.cta:hover {
    background: var(--primary-light);
    transform: translateY(-2px);
  }

  .mobile-menu-btn {
    display: none;
  }

  @media (max-width: 768px) {
    .nav-links {
      display: none;
    }

    .mobile-menu-btn {
      display: block;
      background: none;
      border: none;
      cursor: pointer;
      padding: 0.5rem;
    }

    .mobile-menu-btn span {
      display: block;
      width: 25px;
      height: 2px;
      background: var(--primary);
      margin: 5px 0;
      transition: all 0.3s ease;
    }
  }
</style>